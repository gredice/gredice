{
    "name": "www",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "clean": "rimraf .next .turbo dist build out coverage .vercel storybook-static",
        "lint": "biome check --write",
        "lint:migrate": "biome migrate --write",
        "dev": "next dev -p 3000",
        "build": "next build",
        "postbuild": "next-sitemap --config next-sitemap.config.cjs",
        "start": "next start -p 3000",
        "test": "pnpm run /^test:.*/",
        "test:run": "node --experimental-strip-types ./tests/populate-test-cases.ts && playwright test",
        "test-ui": "playwright test --ui",
        "regenerate": "pnpm run /^regenerate:.*/",
        "regenerate:feature-flags": "hypertune",
        "generate-playwright": "node ./generate/populate-test-cases.js && playwright test --config playwright-generate.config.ts",
        "generate-playwright:ui": "node ./generate/populate-test-cases.js && playwright test --config playwright-generate.config.ts --ui"
    },
    "dependencies": {
        "@flags-sdk/hypertune": "0.3.2",
        "@vercel/kv": "3.0.0",
        "@vercel/toolbar": "0.1.41",
        "flags": "4.0.2",
        "hypertune": "2.10.1",
        "next": "16.1.1",
        "nuqs": "2.8.6",
        "react": "19.2.3",
        "react-dom": "19.2.3",
        "server-only": "0.0.1"
    },
    "devDependencies": {
        "@biomejs/biome": "2.3.11",
        "@gredice/client": "workspace:*",
        "@gredice/game": "workspace:*",
        "@gredice/js": "workspace:*",
        "@gredice/ui": "workspace:*",
        "@playwright/experimental-ct-react": "1.57.0",
        "@playwright/test": "1.57.0",
        "@sentry/nextjs": "10.33.0",
        "@signalco/cms-components-marketing": "0.1.1",
        "@signalco/cms-core": "0.1.1",
        "@signalco/hooks": "0.2.1",
        "@signalco/js": "0.1.0",
        "@signalco/ui": "0.2.10",
        "@signalco/ui-icons": "0.2.2",
        "@signalco/ui-primitives": "0.6.5",
        "@signalco/ui-themes-minimal": "0.1.3",
        "@tailwindcss/typography": "0.5.19",
        "@tanstack/react-query": "5.90.16",
        "@types/node": "24.10.7",
        "@types/react": "19.2.8",
        "@types/react-dom": "19.2.3",
        "@types/xml2js": "0.4.14",
        "@vercel/analytics": "1.6.1",
        "babel-plugin-react-compiler": "19.1.0-rc.3",
        "dotenv": "17.2.3",
        "motion": "12.25.0",
        "next-sitemap": "4.2.3",
        "postcss": "8.5.6",
        "react-confetti-boom": "2.0.1",
        "react-markdown": "10.1.0",
        "tailwindcss": "3.4.19",
        "tailwindcss-animate": "1.0.7",
        "typescript": "5.9.3",
        "xml2js": "0.6.2"
    }
}
