{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "packageRules": [
        {
            "automerge": true,
            "matchDepTypes": [
                "devDependencies"
            ]
        },
        {
            "matchPackagePatterns": [
                "*"
            ],
            "rangeStrategy": "pin",
            "automerge": true
        },
        {
            "matchDepTypes": [
                "engines",
                "peerDependencies"
            ],
            "rangeStrategy": "auto"
        }
    ],
    "dependencyDashboard": true,
    "baseBranches": [
        "main"
    ],
    "minimumReleaseAge": "5 days",
    "prHourlyLimit": 6,
    "platformAutomerge": true,
    "platformCommit": "enabled"
}