{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "inputs": [
                "$TURBO_DEFAULT$",
                ".env*"
            ],
            "outputs": [
                ".next/**",
                "!.next/cache/**"
            ]
        },
        "lint": {},
        "dev": {
            "cache": false,
            "persistent": true
        },
        "test": {
            "dependsOn": [
                "build"
            ]
        },
        "db-generate": {
            "cache": false,
            "outputs": [
                "packages/storage/src/migrations/**"
            ]
        },
        "db-push": {
            "cache": false
        },
        "regenerate": {
            "cache": false,
            "dependsOn": [
                "^regenerate"
            ],
            "inputs": [
                ".env*"
            ],
            "outputs": [
                "libs/flags/**"
            ]
        }
    }
}